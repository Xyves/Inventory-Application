<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create developer</title>
  </head>
  <body>
    <form action="/game/create" method="post">
      <label for="gameName">Enter your game name</label
      ><input type="text" name="gameName" />

      <label for="categoryName">Select category:</label>
      <select name="category" id="category">
        <% categories.forEach((category)=>{ %>
        <option value="<%= category.name %>"><%= category.name %></option>
        <%})%>
      </select>
      <label for="developerName">Select developer:</label>
      <select name="developer" id="developer">
        <% developers.forEach((developer) => { %>
        <option value="<%= developer.name %>"><%= developer.name %></option>
        <% }) %>
      </select>
      <label for="date">Select date:</label>
      <input type="date" name="release_date" />
      <button type="submit">Submit form</button>
    </form>
  </body>
</html>
