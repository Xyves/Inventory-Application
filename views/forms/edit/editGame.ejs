<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title %></title>
  </head>
  <body>
    <form action="/game/edit" method="post">
      <input type="hidden" name="id" value="<%= id %>" />

      <label for="gameName">New name:</label>
      <input type="text" name="gameName" placeholder="<%= game.name %>" />

      <label for="category">Change category:</label>
      <select name="category" id="category">
        <% categories.map((category) => { %>
        <option value="<%= category.name %>"><%= category.name %></option>
        <% }) %>
      </select>

      <label for="developer">Change developer:</label>
      <select name="developer" id="developer">
        <% developers.map((developer) => { %>
        <option value="<%= developer.name %>"><%= developer.name %></option>
        <% }) %>
      </select>

      <label for="release_date">Release Date:</label>
      <input
        type="date"
        name="release_date"
        value="<%= game.release_date%>"
        placeholder="<%= game.release_date %>"
      />

      <button type="submit">Submit form</button>
    </form>
  </body>
</html>
